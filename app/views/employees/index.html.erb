<p id="notice"><%= notice %></p>
<h1>Empleados</h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direcci&oacute;n</th>
      <th>Turno</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.nombre %></td>
        <td><%= employee.direccion %></td>
        <td><%= employee.turno %></td>
        <td><%= employee.telefono %></td>
        <td><%= link_to 'Mostrar Detalles', employee %></td>
        <td><%= link_to 'Editar Informacion', edit_employee_path(employee) %></td>
        <td><%= link_to 'Eliminar', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

