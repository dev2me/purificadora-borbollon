= form_for(client) do |f|
  -if client.errors.any?
    #error_explanation
      %h2 
      %h2 =#{pluralize(client.errors.count, "error")} prohibited this client from being saved:
      %ul
      -client.errors.full_messages.each do |message|
        %li= message
  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :direccion
    = f.text_field :direccion
  .field
    = f.label :telefono
    = f.text_field :telefono
  .actions
    = f.submit
